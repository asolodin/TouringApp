<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.TouringApp.FullscreenContainer"
    tools:context=".FullscreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/border">

            <TextClock
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:format12Hour="E, MMM d"
                android:gravity="start"
                android:text="Mon, Jun 28"
                android:textColor="#000000"
                android:textSize="16sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:id="@+id/spacer_date_rise"
                android:layout_width="30dp"
                android:layout_height="5dp"
                app:layout_constraintStart_toEndOf="@id/date"
                app:layout_constraintTop_toTopOf="@id/date" />

            <Space
                android:id="@+id/spacer_speed"
                android:layout_width="90dp"
                android:layout_height="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date" />

            <Space
                android:id="@+id/spacer_mph"
                android:layout_width="120dp"
                android:layout_height="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/spacer_speed" />

            <TextView
                android:id="@+id/wind_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¬"
                android:textColor="#0000FF"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/spacer_speed" />

            <TextView
                android:id="@+id/wind_apparent_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#0000FF"
                android:textSize="40sp"
                app:layout_constraintEnd_toStartOf="@id/wind_symbol"
                app:layout_constraintBottom_toBottomOf="@id/wind_symbol" />

            <TextView
                android:id="@+id/wind_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âž¡"
                android:textColor="#0000FF"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/wind_label"
                app:layout_constraintBottom_toBottomOf="@id/wind_speed" />

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:text="00.0"
                android:textColor="#AA0000"
                android:textSize="50sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toEndOf="@id/spacer_speed"
                app:layout_constraintTop_toBottomOf="@id/spacer_speed" />


            <TextView
                android:id="@+id/speed_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/fussion"
                android:text="mph/Â°F"
                android:textColor="#000000"
                android:textSize="16sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Space
                android:id="@+id/spacer2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/speed" />

            <TextView
                android:id="@+id/speed_avg_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="start"
                android:text="avg"
                android:textColor="#000000"
                android:textSize="11sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spacer2" />

            <TextView
                android:id="@+id/speed_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="start"
                android:text="12.5"
                android:textColor="#000000"
                android:textSize="22sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="@id/speed_avg_label"
                app:layout_constraintTop_toBottomOf="@id/speed_avg_label" />

            <Space
                android:id="@+id/spacer_avg_max"
                android:layout_width="60dp"
                android:layout_height="10dp"
                app:layout_constraintStart_toEndOf="@id/speed_avg_label"
                app:layout_constraintTop_toBottomOf="@id/spacer2" />

            <TextView
                android:id="@+id/speed_max_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="max"
                android:textColor="#000000"
                android:textSize="11sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toEndOf="@id/spacer_avg_max"
                app:layout_constraintTop_toBottomOf="@id/spacer2" />

            <Space
                android:id="@+id/spacer_max_temp"
                android:layout_width="60dp"
                android:layout_height="10dp"
                app:layout_constraintStart_toEndOf="@id/speed_max_label"
                app:layout_constraintTop_toBottomOf="@id/spacer2" />

            <TextView
                android:id="@+id/temp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="temp"
                android:textColor="#0000FF"
                android:textSize="11sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toEndOf="@id/spacer_max_temp"
                app:layout_constraintTop_toBottomOf="@id/spacer2" />

            <Space
                android:id="@+id/spacer_temp_wind"
                android:layout_width="60dp"
                android:layout_height="10dp"
                app:layout_constraintStart_toEndOf="@id/temp_label"
                app:layout_constraintTop_toBottomOf="@id/spacer2" />

            <TextView
                android:id="@+id/wind_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="wind"
                android:textColor="#0000FF"
                android:textSize="11sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toEndOf="@id/spacer_temp_wind"
                app:layout_constraintTop_toBottomOf="@id/spacer2" />

            <!--TextView
                android:id="@+id/relative_wind_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="rel  wind"
                android:textColor="#0000FF"
                android:textSize="11sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spacer_mph" /-->

            <TextView
                android:id="@+id/feels_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="feels"
                android:textColor="#0000FF"
                android:textSize="11sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="@id/temp_label"
                app:layout_constraintTop_toBottomOf="@id/spacer3" />

            <TextView
                android:id="@+id/gust_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="gust"
                android:textColor="#0000FF"
                android:textSize="11sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toEndOf="@id/spacer_temp_wind"
                app:layout_constraintTop_toBottomOf="@id/spacer3" />

            <TextView
                android:id="@+id/speed_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="22.5"
                android:textColor="#000000"
                android:textSize="22sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="@id/speed_max_label"
                app:layout_constraintTop_toBottomOf="@id/speed_max_label" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="64 F"
                android:textColor="#0000FF"
                android:textSize="22sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="@id/temp_label"
                app:layout_constraintTop_toBottomOf="@id/temp_label" />

            <TextView
                android:id="@+id/wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="07"
                android:textColor="#0000FF"
                android:textSize="22sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="@id/wind_label"
                app:layout_constraintTop_toBottomOf="@id/wind_label" />

            <TextView
                android:id="@+id/feels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="64 F"
                android:textColor="#0000FF"
                android:textSize="22sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="@id/feels_label"
                app:layout_constraintTop_toBottomOf="@id/feels_label" />

            <TextView
                android:id="@+id/wind_gust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                android:gravity="end"
                android:text="07"
                android:textColor="#0000FF"
                android:textSize="22sp"
                app:fontFamily="@font/fussion"
                app:layout_constraintStart_toStartOf="@id/gust_label"
                app:layout_constraintTop_toBottomOf="@id/gust_label" />

            <Space
                android:id="@+id/spacer3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/speed_avg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/trip_distance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="ride dist"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="11sp"
                android:gravity="end"
                android:textColor="#000000" />

            <Space
                android:id="@+id/spacer_dist_trip"
                android:layout_width="40dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/trip_distance_label" />

            <TextView
                android:id="@+id/trip_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="trip dist"
                app:layout_constraintStart_toEndOf="@id/spacer_dist_trip"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="11sp"
                android:gravity="end"
                android:textColor="#000000" />

            <Space
                android:id="@+id/spacer_trip_start"
                android:layout_width="40dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/trip_total_label" />

            <TextView
                android:id="@+id/trip_start_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="trip start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/spacer_trip_start"
                android:textSize="11sp"
                android:gravity="end"
                android:textColor="#000000"

                />

            <TextView
                android:id="@+id/trip_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="008.5"
                app:layout_constraintTop_toBottomOf="@id/trip_distance_label"
                app:layout_constraintStart_toStartOf="@id/trip_distance_label"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="#000000"

                />

            <TextView
                android:id="@+id/trip_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="076.5"
                app:layout_constraintTop_toBottomOf="@id/trip_total_label"
                app:layout_constraintStart_toStartOf="@id/trip_total_label"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/trip_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="00:00p"
                app:layout_constraintTop_toBottomOf="@id/trip_start_label"
                app:layout_constraintStart_toStartOf="@id/trip_start_label"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="#000000"

                />

            <TextView
                android:id="@+id/trip_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="ride time"
                app:layout_constraintTop_toBottomOf="@id/trip_distance"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="11sp"
                android:gravity="end"
                android:textColor="#000000"

                />

            <TextView
                android:id="@+id/trip_total_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="trip time"
                app:layout_constraintStart_toStartOf="@id/trip_total_label"
                app:layout_constraintTop_toTopOf="@id/trip_time_label"
                android:textSize="12sp"
                android:gravity="end"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/trip_eta_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="eta"
                app:layout_constraintTop_toTopOf="@id/trip_total_time_label"
                app:layout_constraintStart_toEndOf="@id/spacer_trip_start"
                android:textSize="11sp"
                android:gravity="end"
                android:textColor="#000000"

                />

            <TextView
                android:id="@+id/trip_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="00:00"
                app:layout_constraintTop_toBottomOf="@id/trip_time_label"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="#000000"

                />


            <TextView
                android:id="@+id/trip_est_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="00:00"
                app:layout_constraintTop_toBottomOf="@id/trip_total_time_label"
                app:layout_constraintStart_toStartOf="@id/trip_total_distance"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="#000000"

                />

            <TextView
                android:id="@+id/trip_eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fussion"
                app:fontFamily="@font/fussion"
                android:text="00:00p"
                app:layout_constraintTop_toBottomOf="@id/trip_eta_label"
                app:layout_constraintStart_toStartOf="@id/trip_eta_label"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="#000000"

                />

            <SurfaceView
                android:id="@+id/altitude_chart"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/border" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/include_weather_layout"
            layout="@layout/weather_layout" />

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="@style/Widget.Theme.TouringApp.ButtonBar.Fullscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <FrameLayout
                android:id="@+id/fullscreen_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        map:uiZoomControls="true"
        tools:context=".MapsFragment"
        android:layout_gravity="bottom"
        tools:layout="@layout/fragment_maps" />

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <!--TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="?attr/fullscreenTextColor"
        android:textSize="50sp"
        android:textStyle="bold" /-->

