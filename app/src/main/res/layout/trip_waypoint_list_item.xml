<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/trip_waypoint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/border_semi_background"
        android:clickable="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_mapmode"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/waypoint_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="...location..."
            android:fontFamily="@font/fussion"
            app:fontFamily="@font/fussion"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/waypoint_dist"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/fussion"
            app:fontFamily="@font/fussion"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:id="@+id/waypoint_total_dist"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/fussion"
            app:fontFamily="@font/fussion"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>